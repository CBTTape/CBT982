//CLARKEB  JOB (0000,0000),CVC,MSGCLASS=X,NOTIFY=CLARKE
// EXEC PLIXCLG,
// PARM='MARGINS(2,72,1),NEST,OBJ,SOURCE,LIST,MAP,GOSTMT'
//SYSPRINT DD SYSOUT=*
 GO : PROC OPTIONS(MAIN);
 DCL INPUT FILE INPUT;
 DCL OUTPUT FILE OUTPUT;
 DCL RECORD CHAR(1256) VAR STATIC;
 DCL NUMBER PICTURE '99999999' STATIC;
 DCL INSERT CHAR(100) VAR STATIC;
 ON ENDFILE(INPUT) BEGIN;
   GO TO ENDPROG;
 END;
  MAINLOOP: READ FILE(INPUT) INTO(RECORD);
          DO I=LENGTH(RECORD) TO 1 BY -1;
             IF SUBSTR(RECORD,I,1)Â¬=' ' THEN GOTO DONE;
          END;
 DONE:
          RECORD=SUBSTR(RECORD,1,I);
          IF RECORD='' THEN RECORD=' ';
          WRITE FILE(OUTPUT) FROM(RECORD);
          GO TO MAINLOOP;

  ENDPROG: END;
