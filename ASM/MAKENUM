 GO : PROC OPTIONS(MAIN);
 DCL INPUT FILE INPUT;
 DCL OUTPUT FILE OUTPUT;
 DCL RECORD CHAR(256) VAR STATIC;
 DCL NUMBER PICTURE '99999999' STATIC;
 DCL INSERT CHAR(100) VAR STATIC;
 ON ENDFILE(INPUT) BEGIN;
   GO TO ENDPROG;
 END;
  MAINLOOP: READ FILE(INPUT) INTO(RECORD);
          IF SUBSTR(RECORD,9,2)='UJ' | SUBSTR(RECORD,9,4)='JOLE'
         THEN DO;
             NUMBER=SUBSTR(RECORD,1,8);
             NUMBER=NUMBER-1;
             INSERT=NUMBER||'.PI 0';
             WRITE FILE(OUTPUT) FROM(INSERT);
             WRITE FILE(OUTPUT) FROM(RECORD);
             NUMBER=NUMBER+2;
             INSERT=NUMBER||'.PI 9';
             WRITE FILE(OUTPUT) FROM(INSERT);
          END;
          ELSE WRITE FILE(OUTPUT) FROM(RECORD);
          GO TO MAINLOOP;

  ENDPROG: END;
